@model E_Commerce.Models.Product


<div class="container">
    @using (Html.BeginForm())
    {


        <div class="row">
            <div class="col-lg-6">
                <img src="~/img/@Model.Product_Img" style="height:250px;width:200px" />
            </div>

            <div class="col-lg-6">
                <h3>@Model.Category_Name</h3>
                <h2>@Model.Product_Name</h2>
                <p>@Model.Product_Desc</p>
                <p><strong>Rs. @Model.Price</strong></p>
                <input type="number" placeholder="Enter Quantity" name="Quantity" min="1" max="10"/>
                <input type="submit" value="Add To Cart" class="btn btn-warning" />
            </div>
        </div>
    }
</div>
